    <script>
        let ì €ê¸ˆì•¡ = 0;

        const moneyDisplay = document.getElementById('moneyDisplay');
        const codeMoneyValue = document.getElementById('codeMoneyValue');
        const depositButton = document.getElementById('depositButton');
        const withdrawButton = document.getElementById('withdrawButton');
        const coinAnimationArea = document.getElementById('coin-animation-area');
        
        const codeBlocks = [
            document.getElementById('block-line-1'),
            document.getElementById('block-line-2'),
            document.getElementById('block-line-3')
        ];

        function updateDisplay() {
            moneyDisplay.textContent = ì €ê¸ˆì•¡;
            codeMoneyValue.textContent = ì €ê¸ˆì•¡;
        }
        
        function highlightCode(blockNumber) {
            codeBlocks.forEach((block, index) => {
                if (index + 1 === blockNumber) {
                    block.style.backgroundColor = 'rgba(251, 191, 36, 0.3)';
                    block.style.transform = 'scale(1.03)';
                } else {
                    block.style.backgroundColor = 'transparent';
                    block.style.transform = 'scale(1)';
                }
            });
        }

        function playCoinAnimation(type) {
            const coin = document.createElement('div');
            coin.textContent = 'ğŸª™';
            coin.className = 'coin text-2xl absolute';
            
            const startX = Math.random() * 80 + 10;
            coin.style.left = `${startX}%`;

            if (type === 'deposit') {
                coin.style.top = '-20px';
                coin.style.opacity = '1';
                coinAnimationArea.appendChild(coin);
                setTimeout(() => {
                    coin.style.top = '40%';
                    coin.style.opacity = '0';
                    coin.style.transform = 'translateY(50px) scale(0.5)';
                }, 10);
            } else { // withdraw
                coin.style.top = '40%';
                coin.style.opacity = '0';
                coinAnimationArea.appendChild(coin);
                setTimeout(() => {
                    coin.style.top = '100%';
                    coin.style.opacity = '1';
                }, 10);
            }

            setTimeout(() => {
                coin.remove();
            }, 600);
        }

        depositButton.addEventListener('click', () => {
            ì €ê¸ˆì•¡ = ì €ê¸ˆì•¡ + 100;
            updateDisplay();
            highlightCode(2);
            playCoinAnimation('deposit');
        });

        withdrawButton.addEventListener('click', () => {
            if (ì €ê¸ˆì•¡ >= 100) {
                ì €ê¸ˆì•¡ = ì €ê¸ˆì•¡ - 100;
                updateDisplay();
                highlightCode(3);
                playCoinAnimation('withdraw');
            } else {
                // ì»¤ìŠ¤í…€ ëª¨ë‹¬ì´ë‚˜ ë©”ì‹œì§€ ë°•ìŠ¤ë¡œ ëŒ€ì²´í•˜ëŠ” ê²ƒì´ ì¢‹ì§€ë§Œ, ê°„ë‹¨í•˜ê²Œ alert ì‚¬ìš©
                const noMoneyMsg = document.createElement('div');
                noMoneyMsg.textContent = 'ì €ê¸ˆí†µì´ ë¹„ì—ˆì–´ìš”!';
                noMoneyMsg.style.cssText = `
                    position: absolute;
                    top: 20px;
                    left: 50%;
                    transform: translateX(-50%);
                    background-color: #f87171;
                    color: white;
                    padding: 10px 20px;
                    border-radius: 8px;
                    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                    opacity: 0;
                    transition: opacity 0.5s;
                    z-index: 100;
                `;
                document.querySelector('.bg-amber-100').appendChild(noMoneyMsg);
                setTimeout(() => noMoneyMsg.style.opacity = '1', 10);
                setTimeout(() => {
                    noMoneyMsg.style.opacity = '0';
                    setTimeout(() => noMoneyMsg.remove(), 500);
                }, 2000);
            }
        });

        // ì´ˆê¸° í™”ë©´ ì„¤ì •
        updateDisplay();
        highlightCode(1);
    </script>

