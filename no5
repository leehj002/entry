    <script>
        // ì½”ë“œ ì‹¤í–‰ ì‹œë®¬ë ˆì´ì…˜
        function runCodeSimulation() {
            const codeLines = document.querySelectorAll('.code-line');
            const output = document.getElementById('codeOutput');
            const outputs = ["", "ì•ˆë…•í•˜ì„¸ìš”", "ì² ìˆ˜", "ë°˜ê°‘ìŠµë‹ˆë‹¤!"];
            
            output.innerHTML = "";
            
            let currentLine = 0;
            
            function executeLine() {
                if (currentLine >= codeLines.length) return;
                
                // í˜„ì¬ ë¼ì¸ í•˜ì´ë¼ì´íŠ¸
                codeLines.forEach(line => line.classList.remove('highlight'));
                codeLines[currentLine].classList.add('highlight');
                
                // ì¶œë ¥ ì¶”ê°€
                if (outputs[currentLine]) {
                    setTimeout(() => {
                        output.innerHTML += outputs[currentLine] + "<br>";
                    }, 500);
                }
                
                setTimeout(() => {
                    codeLines[currentLine].classList.remove('highlight');
                    currentLine++;
                    executeLine();
                }, 1000);
            }
            
            executeLine();
        }
        
        // ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ë“±ë¡
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('runCode').addEventListener('click', runCodeSimulation);
        });
    </script>
